# Monadic reflection (state)

typename Unit = [|Unit|];

# State monad
typename State (a,s,e::Eff) = (s) { |e}~> (s,a);

sig return : (a) -> State(a, s)
fun return(v)(st) {(st, v)}

sig run : (State(a, s), s) ~> (s, a)
fun run(m,st) {m(st)}

sig bind : (State(a, s, { |e}), (a) ~e~> State(b, s, { |e})) -> State(b, s, { |e})
fun bind(m,k)(st) {
  var (st1, x) = run(m, st);
  k(x)(st1)
}

infixl 1 >>=;
op m >>= k {bind(m,k)}

sig get : State(s, s)
fun get(s) {(s,s)}

sig put : (s) -> State(Unit, s)
fun put(s)(_) {(s, Unit)}

# Reify reflect
sig reify : (Comp(b, { Reflect:(State(a, s, { Reflect{p} |e})) {}-> a |e})) { Reflect{p} |e}~> State(b, s, { Reflect{p} |e})
fun reify(m) {
  handle(m()) {
    case Return(x)     -> return(x)
    case Reflect(m, k) -> m >>= k
  }
}

sig reflect : (State(a, s, { |e})) {Reflect:(State(a, s, { |e})) {}-> a |_}-> a
fun reflect(m) {do Reflect(m)}

# Example
fun getR() {reflect(get)}
fun putR(v) {reflect(put(v))}

